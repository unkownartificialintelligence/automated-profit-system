# ==============================================
# AUTOMATED PROFIT SYSTEM - ENVIRONMENT CONFIG
# ==============================================

# Server Configuration
# --------------------
PORT=3003
NODE_ENV=development  # Options: development, production, staging

# Security
# --------
JWT_SECRET=your_super_secure_jwt_secret_key_here_min_32_chars

# Print-on-Demand API Keys
# -------------------------
# Printful API Key - Get from: https://www.printful.com/dashboard/store
PRINTFUL_API_KEY=your_printful_api_key_here

# Payment Processing
# ------------------
# Stripe API Key - Get from: https://dashboard.stripe.com/apikeys
# Use test key (sk_test_...) for development, live key (sk_live_...) for production
STRIPE_API_KEY=your_stripe_api_key_here

# Stripe Webhook Secret - Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# AI & Automation
# ---------------
# OpenAI API Key - Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Email Configuration (Optional)
# -------------------------------
EMAIL_SERVICE=gmail  # Options: gmail, sendgrid, mailgun, etc.
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_app_password_here
EMAIL_FROM=noreply@yourcompany.com

# Database
# --------
DATABASE_PATH=./database.db

# Health Check Thresholds
# -----------------------
# Memory usage warning threshold (percentage)
HEALTH_MEMORY_WARNING_THRESHOLD=80

# Memory usage critical threshold (percentage)
HEALTH_MEMORY_CRITICAL_THRESHOLD=90

# Disk space warning threshold (percentage)
HEALTH_DISK_WARNING_THRESHOLD=80

# Disk space critical threshold (percentage)
HEALTH_DISK_CRITICAL_THRESHOLD=90

# External API timeout (milliseconds)
HEALTH_API_TIMEOUT=5000

# Other Integrations
# ------------------
OTHER_CONNECTOR=your_other_connector_key_here

# Rate Limiting
# -------------
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
# ------------------
CORS_ORIGIN=*  # Change to your frontend domain in production

# Logging
# -------
LOG_LEVEL=info  # Options: error, warn, info, debug
