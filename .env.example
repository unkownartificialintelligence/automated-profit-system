# Environment Configuration
# Copy this file to .env and fill in your values


# Server Configuration
# Application environment
NODE_ENV=development

# Server port number
PORT=3000


# Payment Integration (Required)
# Stripe secret key for payment processing
# REQUIRED
STRIPE_SECRET_KEY=sk_test_...

# Stripe publishable key
STRIPE_PUBLISHABLE_KEY=pk_test_...

# Stripe webhook signing secret
# REQUIRED
STRIPE_WEBHOOK_SECRET=whsec_...


# AI Features (Required)
# OpenAI API key for GPT-4 features
# REQUIRED
OPENAI_API_KEY=sk-...


# POD Integration (Required)
# Printful API key for product fulfillment
# REQUIRED
PRINTFUL_API_KEY=your_printful_api_key


# Email Configuration (Required)
# SMTP server hostname
# REQUIRED
SMTP_HOST=smtp.gmail.com

# SMTP server port
SMTP_PORT=587

# SMTP username (email)
# REQUIRED
SMTP_USER=your@email.com

# SMTP password or app password
# REQUIRED
SMTP_PASS=your_app_password

# Email sender address
SMTP_FROM=


# Database (Production Only)
# PostgreSQL connection string (for Vercel/production)
POSTGRES_URL=postgresql://user:pass@host:5432/db

# Supabase project URL
SUPABASE_URL=https://xxx.supabase.co

# Supabase anonymous key
SUPABASE_ANON_KEY=

# MongoDB connection string
MONGODB_URI=

# Database type to use
DB_TYPE=sqlite


# Frontend Configuration
# Frontend application URL
FRONTEND_URL=http://localhost:3000


# Optional Integrations
# Canva API key for design automation
CANVA_API_KEY=

# Canva brand template ID
CANVA_BRAND_TEMPLATE_ID=

# Shopify API key
SHOPIFY_API_KEY=

# Shopify API secret
SHOPIFY_API_SECRET=

# Etsy API key
ETSY_API_KEY=

# WooCommerce consumer key
WOOCOMMERCE_CONSUMER_KEY=

# WooCommerce consumer secret
WOOCOMMERCE_CONSUMER_SECRET=

