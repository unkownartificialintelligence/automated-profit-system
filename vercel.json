{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/src/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/src/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "crons": [
    {
      "path": "/api/automation/cron",
      "schedule": "0 7 * * *"
    }
  ],
  "regions": ["iad1"],
  "installCommand": "npm install",
  "buildCommand": "cd frontend && npm install && npm run build && cd .. && npm rebuild sqlite3",
  "devCommand": "npm run dev"
}
