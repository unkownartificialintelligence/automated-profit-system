{
  "version": 2,
  "name": "automated-profit-system",
  "builds": [
    {
      "src": "src/server.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/src/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/src/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "src/server.js": {
      "maxDuration": 300,
      "memory": 1024
    }
  },
  "crons": [
    {
      "path": "/api/automation/cron",
      "schedule": "0 9 * * 1"
    }
  ],
  "regions": ["iad1"],
  "framework": null,
  "installCommand": "npm install",
  "buildCommand": "npm rebuild sqlite3",
  "devCommand": "npm run dev"
}
